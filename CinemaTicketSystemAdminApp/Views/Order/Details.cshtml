@{
}

@model CinemaTicketSystemAdminApp.Models.Order


<div class="container">
    <a class="btn btn-success">Order For: @Model.User.UserName</a>

    @for (int i = 0; i < Model.TicketOrders.ToList().Count; i++)
    {
        var item = Model.TicketOrders.ElementAt(i).OrderedTicket;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.ImageUrl" style="height: 50%" alt="Ticket" />

                    <div class="card-body">
                        <h4 class="card-title">@item.MovieName</h4>
                        <p class="card-text">@item.Genre</p>
                        <h5>Price: @item.Price</h5>
                        <p>@item.Date</p>
                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>
