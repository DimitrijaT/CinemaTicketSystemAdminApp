@{
}

@model List<CinemaTicketSystemAdminApp.Models.Order>


<div class="container">

    @if (Model != null && Model.Count == 0)
    {
        <div class="d-flex justify-content-center align-items-center">
            <h1>Shopping Cart is Empty 😔</h1>
        </div>
    }
    else
    {

        <div class="row m-4">
            <a class="btn btn-info" asp-controller="ShoppingCart" asp-action="Order">Order Now</a>
        </div>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Customer Name</th>
                    <th scope="col">Number of Tickets</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.User.UserName</td>
                        <td>@item.TicketOrders.ToList().Count</td>
                        <td><a asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-info">View Order</a></td>
                    </tr>

                }
            </tbody>
        </table>
    }
</div>